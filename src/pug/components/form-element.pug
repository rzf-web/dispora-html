//-------------------------------------------------------------------------------
  @name: Form Element
  -------------------------------------------------------------------------------//

.fe__row
  if data.label
    ='\n'
    label(class='fe__label' for=data.id)
      | !{data.label}
  if data.select
    ='\n'
    select(class=data.class id=data.id name=data.name)
      each val in data.select
        option(value=val.value)
          | !{val.text}
  else
    ='\n'
    input(type=data.type class=data.class id=data.id name=data.name placeholder=data.placeholder data-target=data.target value=data.value autocomplete='off' readonly=data.readonly)/
  if data.icon !== undefinend
    ='\n'
    i(class='fe__icon ci-'+data.icon)
    ='\n'

  if data.target
    //- error validation
    p.fe__alert(id=data.target data-req=data.required data-invalid=data.invalid data-invalid-phone=data.invalidPhone)
