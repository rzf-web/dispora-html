    copyright: 'Copyrights Â© 2023 All Rights Reserved, Dinas Pemuda & Olahraga Provinsi Jawa Barat.',
    nav: [
      {
        title: 'Tentang Kami',
        list: [
          {
            to: 'profile.html',
            text: 'Sejarah'
          },
          {
            to: 'profile.html',
            text: 'Visi & Misi'
          },
          {
            to: 'profile.html',
            text: 'Stuktur Organisasi'
          },
          {
            to: 'profile.html',
            text: 'Tupoksi'
          },
        ]
      },
      {
        title: 'Kontak Kami :',
        list: [
          {
            icon: 'whatsapp',
            text: '(022) 8788 4268'
          },
          {
            icon: 'whatsapp',
            text: '(022) 8788 1419'
          },
          {
