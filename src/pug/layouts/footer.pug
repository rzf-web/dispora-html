//footer
.footer
  .container
    .footer__top
      .footer__about
        ='\n'
        a.footer__logo(href="index.html")
          ='\n'
          img(src='assets/img/logo/'+footer.logo.img alt=footer.logo.alt)/
        .footer__txt
          h3.footer__title
            | !{footer.about.title}
            span
              | !{footer.about.region}
          p.footer__desc
            | !{footer.about.desc}
      .footer__nav
        each val in footer.nav
          .footer__item
            h3.footer__title
              | !{val.title}
            if val.list
              ul.footer__menu
                each valItem in val.list
                  li.footer__menu__item
                    ='\n'
                    a.footer__menu__link(href=valItem.to)
                      if valItem.icon
                        ='\n'
                        i(class="dc-"+valItem.icon)
                        ='\n'
                        span !{valItem.text}
                        if valItem.email
                          br
                          ='\n'
                          span !{valItem.email}
                      else
                        | !{valItem.text}
            else
              p.footer__desc
                | !{val.desc}
    .footer__bottom
      p.footer__copyright
        | !{footer.copyright}


='\n'
//end-footer
