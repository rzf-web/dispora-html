//-------------------------------------------------------------------------------
  @name: Header
  -------------------------------------------------------------------------------//

-
  header = {
    logo: {
      img: 'dispora.png',
      text: 'Dispora Jabar'
    },
    nav: [
      {
        to: 'profile.html',
        text: 'Profil',
        classActive: 'profile',
        dropdown: [
          {
            to: 'history.html',
            text: 'Sejarah',
            classActive: 'history',
          },
          {
            to: 'vision-mission.html',
            text: 'Visi & Misi',
            classActive: 'vision-mission',
          },
          {
            to: 'tupoksi.html',
            text: 'Tupoksi',
            classActive: 'tupoksi',
          },
          {
            to: 'organization.html',
            text: 'Stuktur Organisasi',
            classActive: 'organization',
          },
          {
            to: 'official.html',
            text: 'Stuktural Pejabat',
            classActive: 'official',
          },
        ]
      },
      {
        to: 'program.html',
        text: 'Program',
        classActive: 'program',
      },
      {
        to: 'news.html',
        text: 'Berita',
        classActive: 'news',
        dropdown: [
          {
            to: 'media.html',
            text: 'Media',
            classActive: 'media',
          },
          {
            to: 'news.html',
            text: 'Berita',
            classActive: 'news',
          },
        ]
      },
      {
        to: 'ppid.html',
        text: 'PPID',
        classActive: 'ppid',
      },
    ],
  };

//header
.header
  .container
    .header__inner
      .header__search
        .header__search__bg
        .header__search__box
          form.header__search__form
            ='\n'
            button(class="header__search__btn" type='button')
              ='\n'
              i.dc-search
            ='\n'
            input(class="header__search__inp" name="search" id="search" placeholder="Telusuri di sini!")
            ='\n'
      .header__left
        ='\n'
        a.header__logo(href="index.html")
          ='\n'
          img(src="assets/img/logo/"+header.logo.img alt=header.logo.text)/
        ='\n'
      .header__right
        .header__nav
          ul.header__list
            each val in header.nav
              li.header__item(class=(val.dropdown ? 'header__dropdown' : ''))
                ='\n'
                a.header__link(href=val.to class=(siteActive === val.classActive ? 'header__menu__link--active' : ''))
                  | !{val.text}
                ='\n'
                if val.dropdown
                  .header__dropdown__menu
                    ul.header__dropdown__list
                      each valItem, idx in val.dropdown
                        li.header__dropdown__item
                          ='\n'
                          a.header__dropdown__link(href=valItem.to class=(siteActive === valItem.classActive ? 'header__dropdown__link--active' : ''))
                            | !{valItem.text}
                        ='\n'
        ='\n'
        button.header__icon.js-show-search
          ='\n'
          i(class="dc-search")
        ='\n'
        button.burger-menu.js-mobile-menu(type='button')
          each val in [1, 2, 3]
            ='\n'
            span.burger-menu__bar
          ='\n'

='\n'
//end-header
